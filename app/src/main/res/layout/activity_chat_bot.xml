<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#000000"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back_arrow"
            android:contentDescription="Back" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/profile_circle_bg"
            android:contentDescription="Profile" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="Unicoss Garage - Customer Support"
            android:textColor="#FF0000"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Red line separator -->
    <View
        android:id="@+id/headerLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/header"
        android:background="#FF0000" />

    <!-- Chat Messages Container -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerLine"
        android:layout_above="@+id/bottomSection"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/chatContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="#000000">
        
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/bottomButtonsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center">
    
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnServiceSchedule"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="Service Schedule"
                    android:textSize="10sp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/bottom_button_bg"
                    android:textAllCaps="false" />
    
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnModeOfPayment"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:text="Mode of Payment"
                    android:textSize="10sp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/bottom_button_bg"
                    android:textAllCaps="false" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnVehicleType"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:text="Vehicle Type"
                    android:textSize="10sp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/bottom_button_bg"
                    android:textAllCaps="false" />
    
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnLocation"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:text="Location"
                    android:textSize="10sp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/bottom_button_bg"
                    android:textAllCaps="false" />
    
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnOthers"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="Others"
                    android:textSize="10sp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/bottom_button_bg"
                    android:textAllCaps="false" />
    
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/inputContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="#000000"
            android:gravity="center_vertical">

            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_attachment"
                android:contentDescription="Attach" />

            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_microphone"
                android:contentDescription="Voice" />

            <EditText
                android:id="@+id/messageInput"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:hint="Write a Message"
                android:textColor="#FFFFFF"
                android:textColorHint="#888888"
                android:background="@drawable/new_message_input_bg"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginEnd="8dp"
                android:inputType="textMultiLine|textCapSentences" />

            <ImageButton
                android:id="@+id/sendButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_send_new"
                android:background="@drawable/new_send_button_bg"
                android:contentDescription="Send message"
                android:scaleType="centerInside" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>